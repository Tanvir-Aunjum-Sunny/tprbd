<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B3821"
    android:id="@+id/splash_activity"
    tools:context="com.tpr.andromeda.teenpattireseller.SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:layout_gravity="center"
            android:src="@drawable/logo_rseller" />
        <TextView
            android:id="@+id/textView_app_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*powered by noyontelecom.blogspot.com*"
            android:textColor="#ffffff"
            android:textSize="10sp"/>
    </LinearLayout>

</RelativeLayout>
